---
import BaseLayout from "../layouts/BaseLayout.astro";

import { Separator } from "@/components/ui/separator";
import { buttonVariants } from "../components/ui/button";
import { Github, Linkedin, Box } from "lucide-react";
import BlogBox from "../components/BlogBox.astro";
import ProjectsBox from "../components/ProjectsBox.astro";
---

<BaseLayout
  title="kotogavr blog"
  description="I'm an Indie Maker and full-stack developer with-no-matter-how-much of expereince. I build on Ruby on Rails, Web3 / Web2 and everything in between"
>
