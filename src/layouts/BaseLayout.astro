---
import HeadSEO from "../components/HeadSEO.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title?: string | undefined;
  description?: string | undefined;
  ogImage?: string | undefined;
}

const { title, description, ogImage } = Astro.props;
---

<html lang="en">
  <head>
    <HeadSEO title={title} description={description} ogImage={ogImage} />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="relative flex min-h-screen flex-col">
      <Header />
      <main>
        <div
          class="pointer-events-none fixed z-0 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full bg-violet-700 blur-[150px] md:blur-[350px] opacity-50 left-0 top-0"
        >
        </div>
        <div
          class="pointer-events-none fixed z-0 h-[130px] w-[130px] lg:w-[300px] lg:h-[300px] rounded-full bg-violet-700 blur-[150px] md:blur-[350px] opacity-50 left-0 top-0"
        >
        </div>
        <section
          class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 px-10 py-8 md:gap-20 md:py-16"
        >
          <slot />
        </section>
      </main>
      <div
        class="fixed z-0 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full bg-violet-700 blur-[150px] md:blur-[350px] opacity-50 right-0 bottom-0"
      >
      </div>
      <div
        class="fixed z-0 h-[45px] w-[45px] lg:w-[300px] lg:h-[300px] rounded-full bg-red-800 blur-[150px] md:blur-[350px] opacity-50 -right-3 -bottom-5"
      >
      </div>
      <Footer />
    </div>
  </body>
</html>
